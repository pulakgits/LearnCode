<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginBottom="@dimen/_7sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:background="?selectableItemBackground"
    android:layout_marginRight="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/navView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:background="?selectableItemBackground"
        android:elevation="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:weightSum="4">

        <androidx.cardview.widget.CardView
            android:id="@+id/imgCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackground"
            app:cardCornerRadius="@dimen/_100sdp">

            <ImageView
                android:id="@+id/personImg"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:contentDescription="@string/todoooo" />


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/personName"
            style="@style/itemCatTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imgCard"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_55sdp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/user_name"
            android:textSize="@dimen/_13sdp" />


        <TextView
            android:id="@+id/personRank"
            style="@style/txtNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_70sdp"
            android:gravity="center"
            android:text="#1"
            android:textColor="#13AE19"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/personCoins"
            style="@style/itemCatTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:contentDescription="TODO"
            android:drawableRight="@drawable/coin"
            android:gravity="center"
            android:textSize="@dimen/_13sdp" />

    </RelativeLayout>


</LinearLayout>